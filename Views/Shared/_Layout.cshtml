<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Back_Progetto_S5_L5_PoliziaMunicipale</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Back_Progetto_S5_L5_PoliziaMunicipale.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow-sm custom-navbar">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <span class="brand-badge me-2">PM</span>
                    <span class="fw-semibold">
                        Polizia Municipale
                        <small class="d-block fw-normal brand-subtitle">Gestione verbali</small>
                    </span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 gap-4 fw-bold">
                        @{
                            var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                        }

                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Home" ? "active" : "") fs-6"
                               asp-controller="Home" asp-action="Index">
                                Home
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Anagrafica" ? "active" : "") fs-6"
                               asp-controller="Anagrafica" asp-action="Index">
                                Anagrafiche
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(currentController == "TipoViolazione" ? "active" : "") fs-6"
                               asp-controller="TipoViolazione" asp-action="Index">
                                Tipi violazione
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Verbale" ? "active" : "") fs-6"
                               asp-controller="Verbale" asp-action="Index">
                                Verbali
                            </a>
                        </li>

                        <!-- Report -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @(currentController == "Report" ? "active" : "") fs-6"
                               href="#" id="reportDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Report
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="reportDropdown">
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Report" asp-action="AllVerbali">
                                        Verbali per trasgressore
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Report" asp-action="AllPunti">
                                        Punti per trasgressore
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Report" asp-action="DieciPunti">
                                        Violazioni &gt; 10 punti
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Report" asp-action="QuattrocentoEuro">
                                        Violazioni &gt; 400 €
                                    </a>
                                </li>
                            </ul>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="py-4 min-vh-100">
            @RenderBody()
        </main>
    </div>

    <footer class="mt-auto custom-footer">
        <div class="container py-3 d-flex flex-column flex-md-row justify-content-between align-items-center">
            <div class="small text-muted">
                &copy; 2025 · Polizia Municipale
            </div>
            <div class="small text-muted">
                Created by Lo Zio
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
